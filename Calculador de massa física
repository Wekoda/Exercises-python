a1 = float(input('Qual é sua altura? '))
p1 = float(input('Qual seu peso? '))
#calculos
x = p1/ (a1 ** 2)
if x < 18.5:
    print('Abaixo do peso')
elif x >= 18.5 and x < 25.0:
    print('Peso ideal')
elif x >= 25 and x < 30.0:
    print('Sobrepeso')
elif x >= 30 and x <= 40.0:
    print('Obesidade')
elif x > 40.0:
    print('Obesidade Mórbida')
else:
    print('digite novamente')
